{
	"compilerOptions": {
		"incremental": true,
		"target": "es2017",
		"module": "commonjs",
		"outDir": "dist/",
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"strict": true,
		"typeRoots": ["node_modules/@types"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"importsNotUsedAsValues": "error",
		"declaration": true,
		"declarationMap": true
	},
	"include": ["src/**/*"]
}
